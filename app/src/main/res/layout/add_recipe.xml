<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/baekjong"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:text="나도 백종원!"
        android:textColor="#000000"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="요리 이름"
        android:textColor="#000000"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/nameInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="만드신 요리 이름을 적어주세요!"
        android:textStyle="italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="요리 재료"
        android:textColor="#000000"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/ingredientInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="들어간 재료를 적어주세요!"
        android:textStyle="italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="요리 방법"
        android:textColor="#000000"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/howToCookInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="레시피 공개~★"
        android:textStyle="italic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/camera"
            android:background="color/transparent"/>

        <ImageButton
            android:id="@+id/save"
            android:layout_width="59dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/save3"
            android:background="color/transparent"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="250dp"
            android:layout_height="34dp"
            android:layout_weight="1"
            android:text="◁◁◁◁◁저장 버튼 꾹!!!"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/beerfinal2" />

    </RelativeLayout>
</LinearLayout>
